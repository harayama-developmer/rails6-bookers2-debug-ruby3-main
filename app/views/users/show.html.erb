<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>
      <!--記録-->
      <div class="mb-4">
        <%= render 'compare_report', user: @user %>
      </div>
      <div class="mb-4">
        <%= render 'graph_report', user: @user %>
      </div>
      <div class="mb-4">
        <%= form_with url: search_user_path(@user), method: :get, local: false do |f| %>
          <%= f.date_field :created_at %>
          <%= f.submit "検索", class: 'btn btn-primary btn-sm' %>
        <% end %>
        <div id="<%= dom_id(@user, :books_count) %>">
          <% if @books_count.present? %>
            <%= render 'search_report', books_count: @books_count %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
